<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user), micropost.user %>
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    <span class="content"><%= micropost.content %></span>
    <%= image_tag micropost.image if micropost.image.attached? %>
    <span class="timestamp">
       <%= t "micropost.posted" %><%= time_ago_in_words(micropost.created_at) %>
       <%= t "micropost.ago" %>
      <% if current_user? micropost.user %>
        <%= link_to t("micropost.btn_delete"), micropost, method: :delete,
        data: {confirm: t("delete_user.u_sure")} %>
      <% end %>
    </span>
</li>
