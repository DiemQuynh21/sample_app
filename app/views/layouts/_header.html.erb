<header class="navbar navbar-fixed-top navbar-inverse" >
  <div class = "container">
    <%= link_to t("title.main_title"), root_path, id: "logo" %>
    <nav>
      <ul class = "nav navbar-nav navbar-right">
      <li><%= link_to  t("home"), root_path %></li>
      <li><%= link_to  t("help"), help_path %></li>
      <% if logged_in? %>
        <li><%= link_to t("user_login.us"), "#" %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t "user_login.uaccount" %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("user_login.profile"), current_user %></li>
            <li><%= link_to t("user_login.setting"), "#" %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t("user_login.log_out"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t("login"), login_path %></li>
      <% end %>
    </nav>
  </div>
</header>
